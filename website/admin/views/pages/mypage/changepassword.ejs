<!-- Content Wrapper -->
<div id="content-wrapper" class="d-flex flex-column">

    <!-- Main Content -->
    <div id="content">

        <!-- Topbar -->
        <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">

            <!-- Sidebar Toggle (Topbar) -->
            <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                <i class="fa fa-bars"></i>
            </button>
            <%- include('../../partials/header.ejs') %>

        </nav>
        <!-- End of Topbar -->

        <!-- Begin Page Content -->
        <div class="container-fluid">

            <!-- Page Heading -->
            <div class="d-sm-flex align-items-center justify-content-between mb-4">
                <h1 class="h3 mb-0 text-gray-800">비밀번호 재설정</h1>
            </div>

            <!-- Content Row -->
            <div class="row">
                <div class="col-lg-6 mb-4">
                    <!-- Illustrations -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">비밀번호 재설정</h6>
                        </div>
                        <div class="card-body">
                            <form action="" method="post" onsubmit="return fnChangePassword();">
                                <div class="col-lg-12 mb-4">
                                    <input type="password" name="PasswordNow" id="PasswordNow" value="" placeholder="현재 비밀번호를 입력해주세요" class="form-control" required />
                                </div>
                                <div class="col-lg-12 mb-4">
                                    <input type="password" name="PasswordNew" id="PasswordNew" value="" placeholder="새로운 비밀번호 (규칙: 대문자+소문자+숫자+특수문자+8~50글자 조합)" pattern="^(?=.*[A-Za-z])(?=.*\d)(?=.*[$@$!%*#?&])[A-Za-z\d$@$!%*#?&]{8,50}$" class="form-control" required />
                                </div>
                                <div class="col-lg-12 mb-4">
                                    <input type="password" name="PasswordNewRepeat" id="PasswordNewRepeat" value="" placeholder="새로운 비밀번호를 한번 더 입력해주세요" pattern="^(?=.*[A-Za-z])(?=.*\d)(?=.*[$@$!%*#?&])[A-Za-z\d$@$!%*#?&]{8,50}$" class="form-control" required />
                                </div>
                                <div class="col-lg-12 mb-4 text-right">
                                    <button type="submit" class="btn btn-primary btn-icon-split">
                                        <span class="icon text-white-50">
                                            <i class="fas fa-check"></i>
                                        </span>
                                        <span class="text">확인</span>
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- //Content Row -->

        </div>
        <!-- /.container-fluid -->

    </div>
    <!-- End of Main Content -->


</div>
<!-- End of Content Wrapper -->

